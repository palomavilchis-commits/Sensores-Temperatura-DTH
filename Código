// Este código es para la placa de desarrollo Arduino Uno y se requiere instalar la biblioteca DTH

#include <DHT.h>;

//Declaración
#define DHTPIN 2    
#define DHTTYPE DHT22   
DHT dht(DHTPIN, DHTTYPE); 

//Variables
int chk;
float hum;  
float temp; 

void setup()
{
    Serial.begin(9600);
	dht.begin();

}

void loop()
{
    //Datos
    hum = dht.readHumidity();
    temp= dht.readTemperature();
    
    Serial.print("Humedad: ");
    Serial.print(hum);
    Serial.print(" %, Temp: ");
    Serial.print(temp);
    Serial.println("ºC");
    delay(2000); //Delay 2 sec.
}
